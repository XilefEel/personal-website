---
import SkillCard from "./SkillCard.astro";

const skillCategories = [
  {
    category: "Languages",
    skills: [
      { name: "Python", level: 85, icon: "python" },
      {
        name: "TypeScript",
        level: 80,
        icon: "typescript",
      },
      { name: "Rust", level: 50, icon: "rust" },
    ],
  },
  {
    category: "Frontend",
    skills: [
      { name: "HTML", level: 90, icon: "html5" },
      { name: "CSS", level: 80, icon: "css3" },
      { name: "React", level: 85, icon: "react" },
      { name: "Vue.js", level: 65, icon: "vuedotjs" },
      { name: "Astro", level: 70, icon: "astro" },
    ],
  },
  {
    category: "Tools & Databases",
    skills: [
      { name: "SQLite", level: 65, icon: "sqlite" },
      { name: "Git", level: 70, icon: "git" },
      { name: "Tauri", level: 55, icon: "tauri" },
    ],
  },
];
---

<section id="skills" class="bg-purple-50 py-12 px-6 md:px-8 md:py-24">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-1 text-gray-800">
      Skills & Technologies
    </h2>
    <p class="md:text-base text-sm text-gray-700 mb-12 text-center">
      Here are some of the technologies I've worked with.
    </p>

    <div class="space-y-12">
      {skillCategories.map((category) => <SkillCard category={category} />)}
    </div>
  </div>
</section>
