---
import { Github, Instagram, Linkedin } from "@lucide/astro";

const size = Astro.props.size || 24;
---

<div class="flex flex-row justify-center space-x-8">
  <a
    href="https://github.com/XilefEel"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Visit my GitHub profile"
    class="text-purple-600 hover:text-purple-800 transition-all duration-200 hover:scale-110"
  >
    <Github size={size} />
  </a>
  <a
    href="https://www.instagram.com/felixlee274/"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Visit my Instagram profile"
    class="text-purple-600 hover:text-pink-500 transition-all duration-200 hover:scale-110"
  >
    <Instagram size={size} />
  </a>
  <a
    href="https://www.linkedin.com/in/felix-lee-115515277/"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Visit my LinkedIn profile"
    class="text-purple-600 hover:text-blue-600 transition-all duration-200 hover:scale-110"
  >
    <Linkedin size={size} />
  </a>
</div>
