---
import { Github } from "@lucide/astro";

const { project } = Astro.props;
---

<div
  class="bg-white hover:scale-[1.02] rounded-xl shadow-md overflow-hidden hover:shadow-xl duration-200 transition"
>
  <div class={`h-48 bg-linear-to-br ${project.gradient} relative`}>
    <div
      class="absolute top-3 right-3 bg-white text-xs px-3 py-1 rounded-full font-semibold text-gray-800"
    >
      {project.status}
    </div>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
    <p class="text-gray-600 text-sm mb-4">{project.description}</p>

    <div class="space-y-3">
      <div class="flex flex-wrap gap-2">
        {
          project.tech.map((tech: string) => (
            <span class="text-xs bg-purple-100 text-purple-600 px-3 py-1 rounded-full">
              {tech}
            </span>
          ))
        }
      </div>
      <div class="border-t pt-2 border-gray-100">
        <a
          href={project.link}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`View ${project.title} on GitHub`}
          class="flex items-center gap-2 text-sm font-medium text-purple-600 hover:text-purple-800 transition-colors"
        >
          <Github class="w-4 h-4" />
          <span>View GitHub</span>
        </a>
      </div>
    </div>
  </div>
</div>
