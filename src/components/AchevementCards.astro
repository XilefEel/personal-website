---
import { Image } from "astro:assets";
const { achievement } = Astro.props;
---

<div
  class="bg-white hover:scale-[1.02] rounded-xl shadow-md overflow-hidden hover:shadow-xl duration-200 transition"
>
  <div class="w-full bg-gray-50 flex justify-center items-center p-3">
    <Image
      src={achievement.src}
      alt={achievement.title}
      class="max-h-72 w-auto object-contain rounded-md"
      loading="lazy"
    />
  </div>
  <div class="p-5 flex-1 flex flex-col">
    <h3 class="text-xl font-semibold text-purple-600">
      {achievement.title}
    </h3>
    <p class="text-gray-600 mt-2 text-sm">
      {achievement.description}
    </p>
  </div>
</div>
