---
import { Image } from "astro:assets";
import amo2023 from "../assets/amo2023.jpg";
import sasmo2024 from "../assets/sasmo2024.jpg";
import icas2023 from "../assets/icas2023.jpg";
import icas2024 from "../assets/icas2024.jpg";
import pocc from "../assets/pocc.jpg";

import AchevementCards from "./AchevementCards.astro";
const achievements = [
  {
    title: "AMO 2023",
    description:
      "Successfully delivered over 100 projects across various industries.",
    src: amo2023,
  },
  {
    title: "SASMO 2024",
    description: "Proudly served more than 50 satisfied clients worldwide.",
    src: sasmo2024,
  },
  {
    title: "POCC",
    description: "Proudly served more than 50 satisfied clients worldwide.",
    src: pocc,
  },
  {
    title: "ICAS 2023",
    description: "Over five years of experience in the tech industry.",
    src: icas2023,
  },
  {
    title: "ICAS 2024",
    description: "Proudly served more than 50 satisfied clients worldwide.",
    src: icas2024,
  },
];
---

<section id="achievements" class="bg-white py-12 px-8 md:py-24">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-bold text-center text-purple-500 mb-1">
      Achievements
    </h2>
    <p class="md:text-base text-sm text-gray-700 mb-12 text-center">
      Here are some of my achievements and certificates so far.
    </p>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        achievements.map((achievement) => (
          <AchevementCards achievement={achievement} />
        ))
      }
    </div>
  </div>
</section>
