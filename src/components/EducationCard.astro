---
import { Calendar } from "@lucide/astro";

const { edu } = Astro.props;
---

<div class="relative pl-14 md:pl-20">
  <div
    class="absolute left-4 md:left-6 top-6 w-5 h-5 rounded-full bg-purple-500 border-4 border-white shadow"
  >
  </div>

  <div
    class="bg-white hover:scale-[1.02] rounded-lg shadow-md p-6 hover:shadow-lg transition"
  >
    <div class="flex items-center gap-2 text-gray-500 text-xs md:text-sm mb-2">
      <Calendar size={16} />
      <span>{edu.year}</span>
    </div>

    <h3 class="md:text-2xl text-xl font-bold text-purple-600 mb-1">
      {edu.school}
    </h3>

    <p class="text-gray-700 md:text-base text-sm font-medium mb-1">
      {edu.degree}
    </p>
    <p class="text-gray-500 text-xs md:text-sm mb-4">
      {edu.location}
    </p>
  </div>
</div>
